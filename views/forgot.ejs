<div class="card card-body text-center">
<h2 class="text-center"><i class="fa fa-unlock"></i> Forgot Password
</h2>
<%if(success_msg!=""){%>                                                <div class="alert alert-success alert-dismissible fade show" role="alert">            <button type="button" class="close" data-dismiss="alert" aria-label="Close">              <span aria-hidden="true">&times;</span>   </button>                                   <%=success_msg%>                            </div><%}%>

<%if(error_msg!=""){%>                                            <div class="alert alert-warning alert-dismissible fade show" role="alert">            <button type="button" class="close" data-dismiss="alert" aria-label="Close">              <span aria-hidden="true">&times;</span>   </button>
          <%=error_msg%>                            </div>      <%}%>

<%if(typeof errors != 'undefined'){%>                             <%errors.forEach((error)=>{%>                                     <div class="alert alert-warning alert-dismissible fade show" role="alert">                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">                                                      <span aria-hidden="true">&times;</span>
  </button>
  <%=error.msg%>                                                </div>                                                                                                                            <%})%>                                                        <%}%>

<form action="/forgotpass" class="mt-2"  method="POST">
        <div class="form-group">
          <label for="email">Email</label>                                <input                                                            type="email"                                                    id="email"                                                      name="email"
            class="form-control"
            placeholder="Enter Email"       
	    value="<%= typeof email != 'undefined' ? email : '' %>"
	    />
        </div>
	<button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
      <p class="lead mt-4">
        Already have an Account? <a href="/login">Login</a>
      </p>
</div>
